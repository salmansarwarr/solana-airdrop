{
    "version": "0.1.0",
    "name": "airdrop",
    "instructions": [
        {
            "name": "initializeAirdrop",
            "accounts": [
                { "name": "airdrop", "isMut": true, "isSigner": false },
                { "name": "admin", "isMut": true, "isSigner": true },
                { "name": "systemProgram", "isMut": false, "isSigner": false },
                { "name": "tokenProgram", "isMut": false, "isSigner": false }
            ],
            "args": [
                { "name": "totalTokens", "type": "u64" },
                { "name": "bump", "type": "u8" }
            ]
        },
        {
            "name": "setAllocation",
            "accounts": [
                { "name": "airdrop", "isMut": true, "isSigner": false },
                { "name": "admin", "isMut": true, "isSigner": true }
            ],
            "args": [
                {
                    "name": "recipients",
                    "type": { "vec": { "defined": "Recipient" } }
                }
            ]
        },
        {
            "name": "claim",
            "accounts": [
                { "name": "airdrop", "isMut": true, "isSigner": false },
                { "name": "vault", "isMut": true, "isSigner": false },
                {
                    "name": "userTokenAccount",
                    "isMut": true,
                    "isSigner": false
                },
                { "name": "user", "isMut": true, "isSigner": true },
                { "name": "tokenProgram", "isMut": false, "isSigner": false }
            ],
            "args": []
        }
    ],
    "accounts": [
        {
            "name": "Airdrop",
            "type": {
                "kind": "struct",
                "fields": [
                    { "name": "admin", "type": "publicKey" },
                    { "name": "totalTokens", "type": "u64" },
                    { "name": "claimedTokens", "type": "u64" },
                    {
                        "name": "allocations",
                        "type": { "vec": { "defined": "(Pubkey,u64)" } }
                    },
                    { "name": "bump", "type": "u8" }
                ]
            }
        }
    ],
    "types": [
        {
            "name": "Recipient",
            "type": {
                "kind": "struct",
                "fields": [
                    { "name": "address", "type": "publicKey" },
                    { "name": "amount", "type": "u64" }
                ]
            }
        }
    ],
    "errors": [
        { "code": 6000, "name": "Unauthorized", "msg": "Unauthorized access" },
        { "code": 6001, "name": "NothingToClaim", "msg": "Nothing to claim" },
        { "code": 6002, "name": "Overflow", "msg": "Overflow" }
    ]
}
